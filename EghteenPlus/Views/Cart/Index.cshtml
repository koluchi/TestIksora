@model IEnumerable<EghteenPlus.Models.CartItem>

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>
@using (Html.BeginForm("Delete", "Cart", FormMethod.Post))
{
    <p>
        <input type="submit" value="Clear" />
    </p>
}
@using (Html.BeginForm("Index", "Order", FormMethod.Get))
{
    <p>
        <input type="submit" value="Buy" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prod.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod.Descr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Prod.Url" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod.Descr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
    }

</table>
